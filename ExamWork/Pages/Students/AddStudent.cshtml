@page
@model AddStudentModel
@{
    ViewData["Title"] = "Add Student";
}
@*Главная форма*@
<h3 class="display-4">Add Student</h3>
<div class="list-group-item d-flex justify-content-between">
    <form asp-page-handler="AddStudent" method="post">
        @Html.Label("First Name:")
        <br>
        @Html.TextBox("first_name")
        <br>
        @Html.Label("Last Name:")
        <br>
        @Html.TextBox("last_name")
        <br>
        @Html.Label("Sur Name:")
        <br>
        @Html.TextBox("sur_name")
        <br>
        @Html.Label("Student ID:")
        <br>
        @Html.TextBox("stud_id")
        <br>
        @Html.Label("Group Leader:")
        <br>
        @Html.Label("True:")
        @Html.RadioButton("group_leader", "true")
        @Html.Label("False:")
        @Html.RadioButton("group_leader", "false")
        <br>
        @Html.Label("Group:")
        <br>
        @Html.DropDownList("group", new SelectList(Model.G.GroupList), "All")
        <br>
        <button type="submit" class="btn btn-primary">Save</button>
        <h5>@Model.Message</h5>
    </form>
</div>
<br>

<form>
    <button a asp-page="/Students/MainStudent" class="btn btn-primary">Back</button>
</form>
