@page
@model MainGroupModel
@{
    ViewData["Title"] = "groups";
}
@*Главная форма*@
<div class="text-center">
    <h1 class="display-4">Groups</h1>
</div>
<div>
    <form>
        <button a asp-page="/Groups/AddGroup" class="btn btn-primary">Add Group</button>
    </form>
</div>
<br>
<div>
    <table>
        @foreach (var group in @Model.G.GroupList)
        {
            <tr>
                <td> <h4>@group</h4> </td>
                <td>
                    <form method="post">
                        <a asp-page="/Groups/EditGroup" asp-route-name="@group" class="btn btn-primary">Edit</a>
                    </form>
                </td>
                <td>
                    <form asp-page-handler="DeleteGroup" method="post" asp-route-name="@group" onsubmit="return confirm('Delete?');">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
<br>
<div>
    <form>
        <button a asp-page="/Index" class="btn btn-primary">Back</button>
    </form>
</div>