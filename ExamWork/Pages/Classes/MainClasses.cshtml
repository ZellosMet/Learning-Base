@page
@model MainClassesModel
@{
    ViewData["Title"] = "Classes";
}
@*Главная форма*@
<div class="text-center">
    <h1 class="display-4">Classes</h1>
</div>
<div>
    <form>
        <button a asp-page="/Classes/AddClasses" class="btn btn-primary">Add Classes</button>
    </form>
</div>
<br>
<div>
    <table>
        @foreach (var classes in @Model.CS.ClassesList)
        {
            <tr>
                <td> <h4>@classes.Key</h4> </td>
                <td>
                    <form method="post">
                        <a asp-page="/Classes/Detailsclasses" asp-route-discipline="@classes.Key" class="btn btn-primary">Details</a>
                    </form>
                </td>
                <td>
                    <form method="post">
                        <a asp-page="/Classes/EditClasses" asp-route-discipline="@classes.Key" class="btn btn-primary">Edit</a>
                    </form>
                </td>
                <td>
                    <form asp-page-handler="DeleteClasses" method="post" asp-route-discipline="@classes.Key" onsubmit="return confirm('Delete?');">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
<br>
<div>
    <form>
        <button a asp-page="/Index" class="btn btn-primary">Back</button>
    </form>
</div>